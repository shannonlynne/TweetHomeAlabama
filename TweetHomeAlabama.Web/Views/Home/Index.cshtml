@using TweetHomeAlabama.Application.Models

@model BirdTrait

<!DOCTYPE html>
<html>
<head>    
	<link rel="stylesheet" href="~/StyleSheet.css" type="text/css">
</head >
<body class="body">
	<div class="text-center">
		<h1 class="main-header">Tweet Home Alabama</h1>
	</div>

	<style>
		#content {
			position: relative;
		}

			#content img {
				position: absolute;
				top: 0px;
				right: 0px;
				height: 300px;
				width: 200px;
			}
	</style>

	<div id="content">
		<img src="images/Cover.png" class="ribbon" alt="" />
	</div>

	<div></div>
	<form id="myform" action="bird/getbirds" method="get">

		<br>
		<label for="colors">What color is the bird?</label>
		<select id="colors" name="colors">
			<option value="grey">Grey</option>
			<option value="white">White</option>
			<option value="brown">Brown</option>
		</select>
		<br><br>

		<label for="season">Which is the most identifying features?</label>
		<select id="shape" name="shape">
			<option value="round">Round</option>
			<option value="tall">Tall</option>
			<option value="longBeak">Long Beak</option>
			<option value="pointedWing">Pointed Wing</option>
			<option value="longTail">Long Tail</option>
			<option value="short">Short</option>
			<option value="longBeak">Long Beak</option>
			<option value="squat">Squat</option>
		</select>
		<br><br>

		<label for="season">Which season was it?</label>
		<select id="season" name="season">
			<option value="winter">Winter</option>
			<option value="spring">Spring</option>
			<option value="summer">Summer</option>
			<option value="fall">Fall</option>
		</select>
		<br><br>

		<label for="size">How big was it?</label>
		<select id="size" name="size">
			<option value="tiny">Tiny</option>
			<option value="small">Small</option>
			<option value="medium">Medium</option>
			<option value="large">Large</option>
		</select>
		<br><br>

		<label for="size">Where was this bird spotted?</label>
		<select id="habitat" name="habitat">
			<option value="marsh">Marsh</option>
			<option value="lake">Lake</option>
			<option value="pond">Pond</option>
			<option value="bushes">Bushes</option>
			<option value="trees">Trees</option>
			<option value="grassland">Grassland</option>
		</select>
		<br><br>
		
		<button type="submit" class="btn btn-success">
          Search
        </button>
	</form>

	<script>

		$(document).ready(function () {
			$("myform").submit(function (event) {
				var formData = {
					colors: $("#colors").val()
					shape: $("#shape").val(),
					size: $("#size").val(),
					season: $("#season").val(),
					habitat: $("#habitat").val()
				};

				$.ajax({
					type: "GET",
					url: "Bird/GetBirds",
					data: formData,
					dataType: "json",
					encode: true,
				}).done(function (data) {
					console.log(data);
				});

				event.preventDefault();
			});
		});
	</script>
</body>
</html>

